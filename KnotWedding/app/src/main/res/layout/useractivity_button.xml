<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/user3"
    tools:context=".userbutton">
    <TextView
        android:fontFamily="@font/aref_ruqaa"
        android:text="Welcome to  our  food page"
        android:id="@+id/TextView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
       android:gravity="center"
        android:layout_marginTop="5sp"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="40sp"
        android:padding="5dp"
        android:textColor="#FF22"

        android:layout_marginRight="40sp"
        />


    <TextView
        android:id="@+id/TextView1"
        android:layout_width="307dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="90sp"
        android:layout_marginRight="50sp"
        android:background="@drawable/textborder"
        android:fontFamily="@font/aref_ruqaa"
        android:padding="5dp"
        android:text="Engagement food package"
        android:textColor="#FF22"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <TextView
        android:fontFamily="@font/aref_ruqaa"
        android:text="Holud food package"
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="27sp"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="50sp"
        android:textColor="#FF22"
        android:padding="5dp"
        android:background="@drawable/textborder"
        android:layout_marginRight="50sp"
        />


    <TextView
        android:fontFamily="@font/aref_ruqaa"
        android:text="Reception food package"
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="27sp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="50sp"
        android:textColor="#FF22"
        android:padding="10dp"
        android:background="@drawable/textborder"
        android:layout_marginRight="50sp"
        />
