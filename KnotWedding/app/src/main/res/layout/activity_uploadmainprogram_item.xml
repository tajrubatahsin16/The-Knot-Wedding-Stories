<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Uploadmainprogram_item">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="416dp"
            android:layout_height="124dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foodback1" />

        <TextView
            android:fontFamily="@font/aref_ruqaa"
            android:id="@+id/textView8"
            android:layout_width="257dp"
            android:layout_height="72dp"
            android:layout_marginStart="137dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:text="FOOD PAGE"
            android:textColor="#F44336"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/iv_foodImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txt_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FOOD PACKAGE NAME"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="330dp"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PACKAGE DETAILS"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="330dp"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PRICE"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="330dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black"
                android:onClick="btnSelectImage"
                android:text="Select Image"
                android:textColor="#F44336"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="495dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                android:text="Upload IMAGE"
                android:textColor="#F44336"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="564dp"
                tools:ignore="MissingConstraints"
                android:onClick="btnUploadInfo"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>